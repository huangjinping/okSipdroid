<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text01</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="item_value">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textCursorDrawable">@drawable/custom_cursor</item>
        <item name="android:textColor">@color/text01</item>
        <item name="android:background">@drawable/bg_item_value</item>
    </style>

</resources>